root = true

[*]
charset     = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
tab_width    = 4
indent_size  = 4
indent_style = tab

[*.rs]
tab_width    = 4
indent_size  = 4
indent_style = space

[*.sql]
tab_width    = 2
indent_size  = 2
indent_style = space
